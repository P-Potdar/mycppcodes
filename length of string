#include<iostream>
using namespace std;

int getLength(char name[]){
   int count=0;
    for(int i=0;i<name[i]!='\0';i++){
    count++;
    }
return count;
}
int main(){
    char name[20];
    cout<<"enter your name";
     cin>>name;
     name[5]='\0';
     cout<<"your name is"<< " " << name<<endl;
     cout<<"length "<<getLength(name)<<endl;


}
